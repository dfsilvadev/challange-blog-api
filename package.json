{
  "name": "challange-blog-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/dfsilvadev/challange-blog-api.git",
  "author": "Daniel Silva <dfsilva.dxp@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix ",
    "lint-staged": "npx lint-staged",
    "prepare": "husky",
    "test": "jest --detectOpenHandles --forceExit",
    "test:ci": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:changed": "jest --bail --findRelatedTests --passWithNoTests",
    "test:staged": "jest --bail --findRelatedTests --onlyChanged --passWithNoTests",
    "test:all": "jest --detectOpenHandles --forceExit --coverage",
    "sonar:local": "yarn test:coverage && sonar-scanner",
    "docker:build": "docker build -t blog-api:local .",
    "docker:test": "docker run -d --name test-container -p 3000:3000 blog-api:local && sleep 10 && curl -f http://localhost:3000/health && docker stop test-container && docker rm test-container"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "uuid": "^11.1.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "git-commit-msg-linter": "^5.0.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
